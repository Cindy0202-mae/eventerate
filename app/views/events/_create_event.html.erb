<% if @event.errors.any? %>
  <div class="alert alert-danger">
    <h4 class="alert-heading">Oops! Something went wrong:</h4>
    <ul class="mb-0">
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= simple_form_for @event, url: events_path, method: :post do |f| %>
  <div class="container px-4">
    <h2 class="text-primary text-center fw-bold mb-4">Create a New Event</h2>

    <!-- Title & Date (Side by Side) -->
    <div class="row g-3 mb-3">
      <div class="col-md-6">
        <%= f.input :title, label: "Event Title", input_html: { class: "form-control", placeholder: "Enter event name..." } %>

        <%= f.input :age_range, collection: ['Kindergarten', 'Elementary', 'High School', 'University', 'Corporate'],
          label: 'Participants Age Group', input_html: { class: "form-select" } %>

        <%= f.input :duration, label: "Duration (minutes)",
          input_html: { class: "form-control", placeholder: "e.g. 60", type: "number", min: 1 } %>


        <%= f.input :num_activities, label: "No. of Activities",
          input_html: { class: "form-control", placeholder: "e.g. 3", type: "number", min: 1 } %>

      </div>
      <div class="col-md-6" data-controller="datepicker">
        <%= f.label :date, "Event Date", class: "form-label fw-semibold" %>
        <%= f.text_field :date, class: "form-control", data: { datepicker_target: "input" }, placeholder: "Select a date", autocomplete: "off" %>
      </div>
    </div>

    <!-- Age Group, Duration, Number of Activities (Grouped Together) -->
    <div class="row g-3 mb-3">
    </div>

    <!-- Submit Button -->
    <div class="text-center mt-4 d-grid">
      <%= f.button :submit, "Create Event", class: "btn btn-primary btn-lg px-4 fw-bold shadow-sm" %>
    </div>
  </div>
<% end %>
