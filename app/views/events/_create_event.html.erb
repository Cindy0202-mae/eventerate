<div class="container d-flex justify-content-center align-items-center min-vh-100">
  <div class="col-md-6">
    <div class="card p-4 shadow-lg">
      <h2 class="text-center mb-4">Create Event</h2>

      <% if @event.errors.any? %>
        <div class="alert alert-danger">
          <h4 class="alert-heading">Oops! Something went wrong:</h4>
          <ul class="mb-0">
            <% @event.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= simple_form_for @event do |f| %>
        <div class="mb-3">
          <%= f.input :title, label: "Event Title", input_html: { class: "form-control" } %>
        </div>

        <div class="mb-3">
          <%= f.input :date, as: :string, input_html: { data: { controller: 'datepicker' }, class: "form-control" }, label: "Event Date" %>
        </div>

        <div class="mb-3">
          <%= f.input :duration, label: "Event Duration (in minutes)", input_html: { class: "form-control" } %>
        </div>

        <div class="mb-3">
          <%= f.input :age_range, collection: ['Kindergarten', 'Elementary', 'High School', 'University', 'Corporate'], label: 'Participants Age Group', input_html: { class: "form-select" } %>
        </div>

        <div class="mb-3">
          <%= f.input :num_activities, label: "Number of Activities", input_html: { class: "form-control" } %>
        </div>

        <div class="d-grid">
          <%= f.button :submit, "Create Event", class: "btn btn-primary btn-lg" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
