<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h1>Create Event</h1>
      <%= simple_form_for @event do |f| %>
        <% if @event.errors.any? %>
          <div class="alert alert-danger">
            <h4>Errors:</h4>
            <ul>
              <% @event.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <div class="form-group">
          <%= f.input :title, label: "Event Title" %>
        </div>
        <div class="form-group">
          <%= f.input :date, as: :string, input_html: { data: { controller: 'datepicker' } }, label: "Event Date" %>
        </div>
        <div class="form-group">
          <%= f.input :duration, label: "Event Duration (in hours)" %>
        </div>
        <div class="form-group">
          <%= f.button :submit, "Create Event", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
