
      <% if @activity_event.errors.any? %>
        <div class="alert alert-danger">
          <h4 class="alert-heading">Oops! Something went wrong:</h4>
          <ul class="mb-0">
            <% @activity_event.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= simple_form_for @activity_event do |f| %>
        <div class="mb-4">
          <%= f.input :custom_title, label: "Activity Name", input_html: { class: "form-control" } %>
        </div>

        <div class="mb-4">
          <%= f.input :custom_description, label: "Activity Description", input_html: { class: "form-control" } %>
        </div>

        <div class="d-grid">
          <%= f.button :submit, @activity_event.new_record? ? "Add Activity" : "Update Activity", class: "btn btn-primary btn-lg" %>
        </div>
      <% end %>
