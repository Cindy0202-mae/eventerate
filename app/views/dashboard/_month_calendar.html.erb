<div class="simple-calendar" data-controller="calendar">
  <%= month_calendar(events: @events, start_attribute: :date) do |date, events| %>
    <div class="calendar-day">
      <span class="date-number"><%= date.day %></span>
      <% events.each do |event| %>
        <% if event.date == date %>
          <div class="d-flex">
            <div class="event-item">
              <%= event.title %>
            </div>
            <div class="unfinished-tasks-badge">
              <%= event.unfinished_tasks(current_user) %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>

<div class="modal fade" id="dateEventModal" tabindex="-1" aria-labelledby="eventModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="eventModalLabel">Tasks</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= render 'events/create_event', event: @event, url: events_path, method: :post %>  <!-- Include your form partial here -->
      </div>
    </div>
  </div>
</div>
