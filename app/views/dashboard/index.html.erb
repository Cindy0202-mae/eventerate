<div class="container d-flex flex-column min-vh-100">
  <%# New Event and Calender %>
  <div class="row my-3">
    <div class="col-md-8">
      <div class="card new-event-card p-3 d-flex align-items-center">
        <div class="card event d-flex justify-content-center align-items-center">
          <h2 class="mt-3">Add Event</h2>
          <div class="card-body d-flex flex-row align-items-center justify-content-center">
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addEventModal">
              <i class="fa-solid fa-plus add-event-icon"></i>
            </button>
          </div>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="card text-center p-3">
        <h2>Calender</h2>
        <div id="calendar"></div>
      </div>
    </div>
  </div>
  <%# End New Event and Calender %>

  <%# Current Events %>
  <div class="row my-3">
    <div class="col-md-12">
      <div class="card upcoming-card p-3 d-flex flex-row align-items-center justify-content-between">
        <div>
          <h2>Upcoming Events</h2>
        </div>

        <% if @events.any? %>
          <% @events.each do |event| %>
          <div class="card event">
            <div class="date-header d-flex align-items-center justify-content-center">
              <h3 class="pt-1"><%= event.date %></h3>
            </div>
            <div class="card-body d-flex flex-row align-items-center justify-content-center">
              <h3><%= event.title %></h3>
            </div>
          </div>
          <% end %>
        <% else %>
          <div class="empty-row">
            <h3>No events</h3>
          </div>
        <% end %>

      </div>
    </div>
  </div>
  <%# End Current Events %>

  <%# Add Event Modal %>
    <div class="modal fade" id="addEventModal" tabindex="-1" aria-labelledby="addEventModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="addEventModalLabel">Add Event</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <%# <%= render 'events/form', event: @event %>
          </div>
        </div>
      </div>
    </div>
  <%# End Add Event Modal %>

  <%# Current Tasks %>
  <div class="row my-3">
    <div class="col-md-12">
      <div class="card my-tasks-card p-3 d-flex flex-row align-items-center justify-content-between">
        <div>
          <h2>Current Tasks</h2>
        </div>

        <% if @tasks.any? %>
          <% @tasks.each do |task| %>
            <div class="card event d-flex flex-row align-items-center justify-content-center">
              <h3><%= task.title %></h3>
            </div>
          <% end %>
        <% else %>
          <div class="empty-row">
            <h3>No tasks</h3>
          </div>
        <% end %>

      </div>
    </div>
  </div>
  <%# End Current Tasks %>
</div>
