<div class="container d-flex flex-column h-100">
  <div class="row mt-4 justify-content-center">
    <div class="col card mb-2" id="task-section">
      <div class="d-flex overflow-x-auto">
        <% if @tasks.any? %>
          <% @tasks.each do |task| %>
            <%= link_to event_path(task.event), class: "text-decoration-none" do %>
              <div class="task-info text-start mx-3 mb-3 flex-shrink-0 font-small <%= 'd-none' if task.completed %>" data-task-id="<%= task.id %>">
                <div class="d-flex">
                  <strong class="text-overflow">
                    <%= task.title.capitalize %>
                  </strong>
                </div>
                <div class="text-overflow">
                  <em><%= task.event.title %></em>
                </div>
                <div>
                  Deadline: <%= task.event.date - 7 %>
                </div>

              </div>
            <% end %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
  <%# New Event and Calender %>
  <div class="row my-3 justify-content-center">

    <div class="col-md-6">
      <div class="table-responsive">
        <!-- Calendar View -->
        <%= render 'month_calendar' %>
      </div>
    </div>

    <div class="col-md-5 card d-flex offset-1 overflow-x-auto" id="event-section">
      <h3 class="mb-3 text-center">Upcoming Events</h3>
      <% if @upcoming_events.any? %>
        <div class="d-flex h-100 p-3">
          <div class="event-list">

              <% @upcoming_events.each do |event| %>
                <div class="event-card d-flex">
                  <div class="date text-start">
                    <%= event.date.strftime("%b %d") %>
                  </div>
                  <%= link_to event_path(event), class: "text-decoration-none" do %>

                    <div class="event-info text-start d-flex justify-content-between">
                      <div class="info">
                        <strong>
                          <%= event.title %>
                        </strong>
                        <div class="duration">
                          Minutes: <%= event.duration %>
                        </div>
                      </div>
                      <div class="completion align-self-center pe-5" id="completion-<%= event.id %>">
                        <%= event.completion_percentage %>
                      </div>
                    </div>
                  <% end %>
                </div>
              <% end %>
          </div>
        </div>
      <% else %>
        <h3 class="p-3">
          You have no events. Get started by creating one!
        </h3>
        <div class="d-flex justify-content-end mt-auto">
          <button type="button" data-bs-toggle="modal" data-bs-target="#fluffEventModal" class="add-event text-white">
            <i class="fa-solid fa-plus"></i>
              New Event
          </button>
        </div>
      <% end %>
    </div>

  </div>


  <!-- Modal for Creating Event -->
  <div class="modal fade" id="eventModal" tabindex="-1" aria-labelledby="eventModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="eventModalLabel">Create New Event</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <%= render 'events/create_event', event: @event, url: events_path, method: :post %>  <!-- Include your form partial here -->
        </div>
      </div>
    </div>
  </div>

  <!-- Fluff modal -->
  <div class="modal fade" id="fluffEventModal" tabindex="-1" aria-labelledby="eventModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="eventModalLabel">Create New Event</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <%= render 'events/create_event', event: @event, url: preview_event_path, method: :get %>  <!-- Include your form partial here -->
        </div>
      </div>
    </div>
  </div>
</div>
