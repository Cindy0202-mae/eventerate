<%= render "dashboard/sidebar" %>


<div class="d-flex flex-column h-100">
  <%# New Event and Calender %>
  <div class="row my-3">
    <div class="col-md-2 add-margin-right"></div>
    <div class="col-md-3 card d-flex p-4 me-5" id="event-section">

      <% if @upcoming_events.any? %>
        <div class="d-flex h-100 align-items-stretch">
          <div class="event-list ms-auto">
            <div class="d-flex justify-content-end">
              <button type="button" data-bs-toggle="modal" data-bs-target="#fluffEventModal" class="add-event text-white">
                <i class="fa-solid fa-plus"></i>
                  New Event
              </button>

            </div>

              <% @upcoming_events.each do |event| %>
                <div class="event-card d-flex">
                  <div class="date text-start">
                    <%= event.date.strftime("%b %d") %>
                  </div>
                  <%= link_to event_path(event), class: "text-decoration-none" do %>
                    <div class="event-info text-start">
                      <strong>
                        <%= event.title %>
                      </strong>
                      <div class="duration">
                        Minutes: <%= event.duration %>
                      </div>
                    </div>
                    <% end %>
                </div>
              <% end %>
          </div>
        </div>

        <% else %>
          <h3>
            You have no events. Get started by creating one!
          </h3>
        <% end %>

    </div>

    <div class="col-md-3 ms-2">
      <div class="calendar-card">
        <!-- Calendar View -->
        <%= render 'month_calendar' %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6 card p-4 my-2" id="task-section">
      <div class="d-flex overflow-x-auto">
        <% if @tasks.any? %>
          <% @tasks.each do |task| %>
            <%= link_to event_path(task.event), class: "text-decoration-none" do %>
              <div class="task-info text-start mx-3 mb-3 flex-shrink-0">
                <strong>
                  <%= task.title.capitalize %>
                </strong>
                <div>
                  Event: <%= task.event.title %>
                </div>
                <div>
                  Date: <%= task.event.date %>
                </div>
                <div>
                  Status: <%= task.completed ? "Completed" : "Not Completed" %>
                </div>
              </div>
            <% end %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Modal for Creating Event -->
  <div class="modal fade" id="eventModal" tabindex="-1" aria-labelledby="eventModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="eventModalLabel">Create New Event</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <%= render 'events/create_event', event: @event, url: events_path, method: :post %>  <!-- Include your form partial here -->
        </div>
      </div>
    </div>
  </div>

  <!-- Fluff modal -->
  <div class="modal fade" id="fluffEventModal" tabindex="-1" aria-labelledby="eventModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="eventModalLabel">Create New Event</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <%= render 'events/create_event', event: @event, url: preview_event_path, method: :get %>  <!-- Include your form partial here -->
        </div>
      </div>
    </div>
  </div>
</div>
