<% if @tasks.any? %>
  <% @tasks.each do |task| %>
    <div class="task-info-modal text-start mx-3 mb-3 flex-shrink-0 font-small">
      <div class="d-flex justify-content-between" data-controller="tasks">
        <strong class="text-overflow">
          <%= task.title.capitalize %>
        </strong>
        <%= link_to "#", data: { task_id: task.id, action: "click->tasks#toggleStatus" } do %>
          <i class="<%= task.completed ? 'fa-solid fa-circle-check text-success font-medium' : 'fa-solid fa-circle-check text-secondary font-medium'%>"></i>
        <% end %>
      </div>
      <div class="text-overflow">
        <em><%= task.event.title %></em>
      </div>
    </div>
  <% end %>
<% else %>
  <h1 class="text-center">
    Hurray! No Tasks 🎉🥳🎉
  </h1>
<% end %>
