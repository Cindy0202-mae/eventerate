<div class="position-relative">
  <!-- Banner Image -->
  <%= image_tag 'Eventerate.png', alt: 'Eventerate Banner', class: 'img-fluid w-100' %>

  <!-- Dark Overlay -->
  <div class="position-absolute top-0 start-0 w-100 h-100 bg-dark opacity-50"></div>

  <!-- Centered Text & CTA -->
  <div class="position-absolute top-50 start-50 translate-middle text-center text-white">
    <h1 class="display-4 fw-bold">Effortless Event Planning for Any Occasion</h1>
    <p class="lead">Plan corporate, school, or private events in just a few clicks.</p>
    <a href="#" class="btn btn-primary btn-lg mt-3">Get Started</a>
