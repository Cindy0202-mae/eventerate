<div class="position-relative vh-100 w-100 overflow-hidden d-flex align-items-center justify-content-start">
  <!-- Banner Image -->
  <%= image_tag '2.png', alt: 'Eventerate Banner', class: 'banner-image' %>

  <!-- Dark Overlay -->
  <div class="overlay position-absolute top-0 start-0 w-100 h-100"></div>
  <!-- Logo -->

  <!-- Centered Text & CTA -->
  <div class="container position-relative z-2 text-white ms-5" style="max-width: 900px; margin-top: -80px;">
      <%= image_tag 'Eventerate_2.png', alt: 'Eventerate Logo', class: 'logo-img' %>
    <h1 class="fw-bold custom-h1">Effortless Event Planning for Any Occasion</h1>
    <p class="lead"><span id="typed-text"></span></p>
    <% if user_signed_in? %>
      <a href="<%= new_event_path %>" class="btn btn-gradient btn-lg mt-3">Create an Event</a>
    <% else %>
      <a href="<%= new_user_registration_path %>" class="btn btn-gradient btn-lg mt-3">Get Started</a>
    <% end %>
  </div>
</div>

<!-- Typed.js -->
<script src="https://cdn.jsdelivr.net/npm/typed.js@2.0.12"></script>
<script>
  document.addEventListener('turbo:load', function() {
    if (document.querySelector("#typed-text")) {
      new Typed("#typed-text", {
        strings: [
          "Plan corporate, school, or private events in just a few clicks.",
          "Eventerate simplifies your planning process.",
          "Start organizing events with ease today!"
        ],
        typeSpeed: 40,
        backSpeed: 20,
        loop: true,
        showCursor: true,
        cursorChar: "ðŸª„"
      });
    }
  });
</script>
